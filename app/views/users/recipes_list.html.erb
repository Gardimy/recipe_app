<h1> Recipes List</h1>

<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>

<% @recipes.each do |recipe| %>
  <div class="recipe-card">
    <h2><%= recipe.name %></h2>
    <p>Preparation Time: <%= recipe.preparation_time %> minutes</p>
    <p>Cooking Time: <%= recipe.cooking_time %> minutes</p>
    <p>Description: <%= recipe.description %></p>
    <p>Public: <%= recipe.public ? 'Yes' : 'No' %></p>
    
    <%= link_to 'View Details', recipe_details_path(recipe) %>
    <%= link_to 'Delete Recipe', delete_recipe_path(recipe), method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>

<%= link_to 'Create New Recipe', new_recipe_path %>
