<h1>Add Food to Recipe</h1>

<%= form_with(model: @food, url: create_food_recipe_path(@recipe), method: :post) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :quantity %>
    <%= f.number_field :quantity, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :unit %>
    <%= f.text_field :unit, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Add Food", class: "btn btn-primary" %>
  </div>
<% end %>
